<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_doctor_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        tools:context=".MyInfoActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/doctorInfo_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                >
                <!--<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back_black_24dp"/> -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/doctorInfo_bar"
                    style="@style/barTextStyle"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/default_user"
                android:scaleType="fitXY"
                android:layout_gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/doctorInfo_username"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/doctorInfo_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/textStyle"
                    android:layout_weight="4"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/doctorInfo_sex"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/doctorInfo_sex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/textStyle"
                    android:layout_weight="4"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/doctorInfo_age"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/doctorInfo_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/textStyle"
                    android:layout_weight="4"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/doctorInfo_title"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/doctorInfo_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/textStyle"
                    android:layout_weight="4"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/doctorInfo_workTime"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/doctorInfo_workTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/textStyle"
                    android:layout_weight="4"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/doctorInfo_contact"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/doctorInfo_contact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/textStyle"
                    android:layout_weight="4"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/doctorInfo_introduction"
                    android:layout_marginBottom="5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    style="@style/textStyle">

                </EditText>
            </LinearLayout>




            <Button
                android:id="@+id/doctorInfo_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/btnStyle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="@string/doctorInfo_confirm"
                />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
